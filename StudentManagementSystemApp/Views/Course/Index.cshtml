 @model List<CourseDto>
@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row justify-content-end">
	
	<a href="@Url.Action("Create", "Course")" class="btn btn-primary">Create</a>

</div>
<div class="row">
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Code</th>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">StartDate</th>
				<th scope="col">EndDate</th>
				<th scope="col">Operation</th>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						<td>@item.Code</td>
						<td>@item.Name</td>
						<td>@item.Description</td>
						<td>@item.StartDate</td>
						<td>@item.EndDate</td>
						<td>
							<a asp-action="Update" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-secondary"> <i class="bi bi-pen"></i></a>
							<a asp-action="Delete" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
						</td>
					</tr>
				}
			}


		</tbody>
	</table>
</div>
